{
  "name": "milight-controller",
  "version": "0.9.0",
  "description": "milight controller with message queue adapter to control milight leds",
  "main": "index.js",
  "author": "Maik Paulus <work@maikpaulus.com>",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.6.0",
    "config": "^3.1.0",
    "debug": "^4.2.0",
    "forever": "^0.15.3",
    "prettier": "^1.15.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.5.13",
    "@types/config": "0.0.36",
    "@types/debug": "^4.1.5",
    "@types/node": "^10.12.10",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.2.0",
    "nodemon": "^1.18.7",
    "ts-loader": "^5.3.0",
    "typescript": "^3.1.6",
    "typescript-eslint-parser": "^21.0.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "start:development": "DEBUG=service:* ./node_modules/.bin/nodemon dist/index.js",
    "start:deployment": "./deployment/deployment.sh",
    "start:production": "DEBUG=service:* ./node_modules/.bin/forever --append --uid milight-controller start dist/index.js",
    "stop:production": "./node_modules/.bin/forever stop milight-controller",
    "build": "./node_modules/.bin/tsc -p .",
    "build:watch": "./node_modules/.bin/tsc -p . --watch",
    "prettier": "prettier --ignore-path ./settings/prettier/.prettierignore --config ./settings/prettier/prettier.config.js --write '**/*.{ts,js}'",
    "eslint": "eslint --config ./settings/eslint/eslint.config.js '**/*.ts'",
    "check": "prettier && eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  }
}
